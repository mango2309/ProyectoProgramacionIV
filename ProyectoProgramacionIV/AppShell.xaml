<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoProgramacionIV.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ProyectoProgramacionIV.Views"
    Title="ProyectoProgramacionIV">

    <TabBar>

        <Tab Title="Menu Principal">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <Tab Title="Clientes" Icon="icon_cliente.png">
            <ShellContent ContentTemplate="{DataTemplate views:ClientesPage}" />
        </Tab>
        <Tab Title="Autos" Icon="icon_car.png">
            <ShellContent ContentTemplate="{DataTemplate views:CarrosPage}" />
        </Tab>
        <Tab Title="Reservas" Icon="icon_reservation.png">
            <ShellContent ContentTemplate="{DataTemplate views:ReservacionesPage}" />
        </Tab>
    </TabBar>

</Shell>
